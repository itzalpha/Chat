<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="wrap_content"
    android:layout_margin="8dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatprofileimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_white_circular"
        android:src="@drawable/ic_person"/>
    <TextView
        android:id="@+id/chatmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/chatprofileimage"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/chatmessageleft"/>
    <ImageView
        android:id="@+id/chatimageleft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/chatmessage"
        android:layout_marginEnd="8dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/textseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@+id/chatmessage"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>


</RelativeLayout>